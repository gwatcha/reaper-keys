#!/bin/bash
set -o xtrace

timeout 5 ./reaper/reaper -new -nosplash &>/dev/null # still evaluating

for test in *.rks; do
    echo "Running $test"
    expected=${test%.rks}.RPP
    out=out.RPP

    ./reaper/reaper -saveas $out -new -nosplash 1>stdout 2>stderr &
    pid=$(echo $!)
    sleep 1

    xdotool search --onlyvisible --all reaper windowactivate windowfocus
    wid=$(xdotool getactivewindow)

    while read cmd; do
        if [[ $cmd == "&"* ]]; then
            xdotool key --window $wid "${cmd#&}"
        else
            xdotool type --window $wid "$cmd"
        fi
    done <$test

    xdotool type --window $wid " ps"

    sleep .5
    kill $pid
    diff $expected $out
    echo "Stdout:\n$(cat stdout)\nStderr:\n$(cat stderr)"
    rm $out stdout stderr
done
