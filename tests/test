#!/bin/sh
ret=0; out=out.RPP; reaper="./reaper/reaper -new -nosplash"
if [ $# -eq 0 ]; then
    tests="*.rks"; timeout 6 $reaper 1>/dev/null 2>&1 # still evaluating
else
    tests=$@
fi

for test in $tests; do
    echo "Running $test"

    $reaper -saveas $out 1>/dev/null 2>&1 &
    pid=$(echo $!); sleep 1
    xdotool search --onlyvisible --all reaper windowfocus 1>/dev/null 2>&1

    { <$test sed 's|"[^"]*$||' | tr ' ' '\n'
    } | while read cmd; do
        if [ "${cmd%${cmd#?}}" = "&" ]; then
            xdotool key "${cmd#?}"
        else
            xdotool type "$cmd"
        fi
        sleep .1
    done

    xdotool type " ps"; sleep .5; kill $pid

    ./compare ${test%.rks}.RPP $out
    diff_ret=$(echo $?)
    echo "Test exit code $diff_ret"
    ret=$(( ret + diff_ret ))
    rm $out
done
exit $ret
