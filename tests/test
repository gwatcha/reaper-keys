#!/bin/sh
ret=0; out=out.RPP
if [ $# -eq 0 ]; then
    timeout 6 ./reaper/reaper -new -nosplash 1>/dev/null 2>&1 # still evaluating
    tests="*.rks"
else
    tests=$@
fi

for test in $tests; do
    echo "Running $test"
    expected=${test%.rks}.RPP

    ./reaper/reaper -saveas $out -new -nosplash 1>/dev/null 2>&1 &
    pid=$(echo $!); sleep 1
    xdotool search --onlyvisible --all reaper windowfocus 1>/dev/null 2>&1

    { <$test sed 's|"[^"]*$||' | tr ' ' '\n'
    } | while read cmd; do
        if [ "${cmd%${cmd#?}}" = "&" ]; then
            xdotool key "${cmd#?}"
        else
            xdotool type "$cmd"
        fi
        sleep .1
    done

    xdotool type " ps"; sleep .5; kill $pid

    ./compare $expected $out
    diff_ret=$(echo $?)
    echo "Test exit code $diff_ret"
    ret=$(( ret + diff_ret ))
    rm $out
done

exit $ret
